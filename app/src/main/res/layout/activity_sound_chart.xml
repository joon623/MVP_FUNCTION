<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AudioRecorderSample.SoundChartActivity">

    <FrameLayout
        android:id="@+id/fl_chart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff">
        <SurfaceView
            android:id="@+id/sv_wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_chart"
        app:layout_constraintTop_toBottomOf="@+id/fl_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_media_player_start_or_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#A68C8C"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="START"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_media_player_pause_or_resume"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="#A68C8C"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="PAUSE"
            android:textSize="14dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>